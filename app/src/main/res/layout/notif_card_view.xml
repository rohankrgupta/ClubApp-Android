<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/msg_card_view"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="10dp"
    app:cardCornerRadius="12dp"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFEFD5">


        <TextView
            android:id="@+id/msg_pr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/heebo_light"
            android:text="Rohan Gupta"
            android:textAlignment="center"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="@+id/profile_pic"
            app:layout_constraintStart_toStartOf="@+id/profile_pic"
            app:layout_constraintTop_toBottomOf="@+id/profile_pic" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_pic"
            android:layout_width="64dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ppp"
            app:civ_border_color="@color/whiteish"
            app:civ_border_width="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pr_uni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="sans-serif-light"
            android:text="NIT Durgapur"
            android:textSize="8sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView22"
            app:layout_constraintStart_toEndOf="@+id/textView22" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="10dp"
            android:layout_height="22dp"
            android:layout_marginStart="5dp"
            android:text="â€¢"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintBaseline_toBaselineOf="@+id/pr_uni"
            app:layout_constraintStart_toEndOf="@+id/pr_uni" />

        <TextView
            android:id="@+id/pr_add"
            android:layout_width="67dp"
            android:layout_height="13dp"
            android:layout_marginStart="8dp"
            android:fontFamily="sans-serif-light"
            android:text="West Bengal, India"
            android:textSize="8sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/pr_uni"
            app:layout_constraintStart_toEndOf="@+id/textView26" />

        <TextView
            android:id="@+id/msg_pr_des"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="#FFEFD5"
            android:fontFamily="@font/heebo_light"
            android:text="Hi, Everyone today we are planning to organize a hackathon and need voluntiers for it. Please contact Anshika if interested."
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profile_pic"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-thin"
            android:text="ðŸ‘¥"
            android:textAlignment="viewStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/msg_pr_name"
            app:layout_constraintStart_toStartOf="@+id/msg_pr_name"
            app:layout_constraintTop_toBottomOf="@+id/msg_pr_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>



